# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# Bash scripts (alternative extension)
[*.bash]
indent_style = space
indent_size = 4

# AWK scripts
[*.awk]
indent_style = space
indent_size = 4

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# Makefiles (must use tabs)
[Makefile]
indent_style = tab

# Bats test files
[*.bats]
indent_style = space
indent_size = 4
